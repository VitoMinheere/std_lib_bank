from enum import Enum


class BankAccount:
    def __init__(self, allow_overdraft: bool = False):
        self.balance = 0
        self.allow_overdraft = allow_overdraft
        self.transactions = []

    def check_positive(self, value: int) -> int:
        if value < 0:
            raise ValueError("Value cannot be negative")
        else:
            return value

    def get_balance(self) -> int:
        return self.balance

    def is_overdrawn(self) -> bool:
        return self.balance < 0

    def deposit(self, amount: int) -> None:
        self.check_positive(amount)
        self.balance += amount
        print(self.get_balance())

    def withdraw(self, amount: int) -> None:
        self.check_positive(amount)
        if (self.balance - amount) < 0 \
                and not self.allow_overdraft:
            print("Insufficient balance")
        else:
            self.balance -= amount

    def add_transaction(self, trx: Transaction) -> None:
        self.transactions.append(trx)


class Transaction:
    class TransactionTypes(Enum):
        DEPOSIT = 0
        WITHDRAWAL = 1

    def __init__(self, trx_type: TransactionTypes, amount: int):
        self.trx_type = trx_type
        self.amount = 0

    def execute(self, account: BankAccount):
        if self.trx_type == TransactionTypes.DEPOSIT:
            account.deposit(self.value)

